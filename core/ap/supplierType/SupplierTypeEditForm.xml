<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'>

    <formView id="SuppType" type="Master" bindingBO="supplierType/SupplierType">
        <header>Supplier Type</header>
        <keyField>supp_type_id</keyField>
        <newDocEnabled/>
        <deleteDocEnabled/>     
        <controlSection editMode="Edit">
            <dataBinding>
                <field id="supp_type" label="Supplier Type" type="string" control="TextBox" size="s" maxLength="50"/>               
                <nextRow/>
                <field id="supp_type_desc" label="Description" type="string" control="TextBox" size="s" maxLength="500"/>   
            </dataBinding>
        </controlSection>   
    </formView>
</cwFramework>