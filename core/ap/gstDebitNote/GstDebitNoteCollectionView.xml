<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'> 
    
    <collectionView id="GstDebitNote" type="Document" bindingBO="GstDebitNote" editView="gstDebitNote/GstDebitNoteEditForm">
        <header>Purchase Return/Debit/Credit Note</header>
        <collectionSection>
            <connectionType>
                <companyDB/>
            </connectionType>                 
            <sql>
                <command>
                    Select a.voucher_id, a.doc_date, a.received_from, a.credit_amt, a.credit_amt_fc, a.status,
                            (a.annex_info-&gt;&gt;'origin_bill_id')::varchar origin_bill_id, (a.annex_info-&gt;&gt;'origin_bill_date')::date origin_bill_date
                    from ap.pymt_control a
                    Where a.finyear=:pfinyear and a.company_id=:pcompany_id and a.branch_id=:pbranch_id
                    And a.doc_type='DN2'
                    Order by a.voucher_id
                </command>
                <params>
                    <param id="pcompany_id">
                        <session>company_id</session>
                    </param>
                    <param id="pbranch_id">
                        <session>branch_id</session>
                    </param>
                    <param id="pfinyear">
                        <session>finyear</session>
                    </param>
                </params>
            </sql>
            <displayFields>
                <displayField columnName="doc_date" displayName="Date" format="Date"/>
                <displayField columnName="voucher_id" displayName="Document No"/>
                <displayField columnName="received_from" displayName="Paid To"/>
                <displayField columnName="origin_bill_id" displayName="Origin Bill#"/>
                <displayField columnName="origin_bill_date" displayName="Origin Bill Dt." format="Date"/>
                <displayField columnName="credit_amt" displayName="Settled Amt" format="Amount"/>
            </displayFields>
        </collectionSection>
    </collectionView>
</cwFramework>