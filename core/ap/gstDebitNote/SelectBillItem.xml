<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'>
    <allocView id="SeleBill" type="alloc"  width="1050px">
        <header>Select Bill Items</header>
        <controlSection editMode="Edit">
            <dataBinding>
                <field id="sele-bill-loading" control="Label" label="Loading ..." />
                <tranSection label="" editMode="Edit" fixedWidth="770">
                    <dataBinding dataProperty="bill_temp">
                        <field id="is_select" label="..." type="bool" control="CheckBox" size="1"/>
                        <field id="doc_date" label="Date" type="date" control="Date" size="2" readOnly="true"/>
                        <field id="bill_tran_id" label="Voucher Tran No" type="string" control="TextBox" size="4" readOnly="true" maxLength="50" />
                        <field id="description" label="Description" type="string" control="TextBox" size="3" readOnly="true" maxLength="50" />                       
                        <field id="bill_amt" label="Bill Amt" type="decimal" control="TextBox" size="3" readOnly="true" scale="amt"/>
                    </dataBinding>
                </tranSection>
            </dataBinding>
        </controlSection>
    </allocView>
</cwFramework>