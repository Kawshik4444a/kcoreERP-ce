                <displayField columnName="sale_amt" displayName="Sale Amt" id="sale_amt" label="Sale Amt" type="decimal" control="TextBox" size="s" editMode="Edit"
                     cdata-enable-on="core_fa.as.enable_sale_amt" scale="amt"/>
