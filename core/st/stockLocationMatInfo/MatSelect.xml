            <dataBinding>
                <field id="stock-loading" control="Label" type="string" size="m" label="Loading stock items..." />
                <tranSection label="" editMode="Edit" >
                    <dataBinding dataProperty="mat_temp" bindMethod="datatable">   
                    </dataBinding>
                </tranSection>
            </dataBinding>
        </controlSection>
    </allocView>
</cwFramework>    