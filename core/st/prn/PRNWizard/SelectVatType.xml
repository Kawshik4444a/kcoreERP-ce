                        <valueMember>vat_type_id</valueMember>
                        <displayMember>vat_type_desc</displayMember>
                        <namedLookup>../core/tx/lookups/VatTypePurchase.xml</namedLookup>
                    </lookup>   
                </displayField>   
            </displayFields>
        </formSection>
    </sections>
</wizardView>
