<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'>

    <formView id="MultiCustReceipt" type="Document" bindingBO="multiCustReceipt/MultiCustReceipt">
        <header>Multi Customer Receipt</header>
        <keyField>voucher_id</keyField>
        <printView rptOption="multiCustReceipt/MultiCustReceiptPrint">
            <rptParams>
                <param id="pvoucher_id">voucher_id</param>
            </rptParams>
        </printView>
        <newDocEnabled>
            <docType>MCR</docType>
        </newDocEnabled>
        <deleteDocEnabled/>
        <clientJsCode>multiCustReceipt/MultiCustReceipt_clientcode.js</clientJsCode>        
        <clientJsCodeRefs>
            <clientJsCodeRef>../core/ar/ar_clientcode.js</clientJsCodeRef>
            <clientJsCodeRef>../core/tx/tx_clientcode.js</clientJsCodeRef>
            <clientJsCodeRef>../core/ap/supplierPayment/SupplierPayment_clientcode.js</clientJsCodeRef>
            <clientJsCodeRef>../core/tx/ovrdHsnSc/hsn_cc.js</clientJsCodeRef> 
        </clientJsCodeRefs>
        <jsEvents>
            <afterLoadEvent>mcr.after_load</afterLoadEvent>
        </jsEvents>
        <controlSection editMode="Edit">
            <dataBinding>
                <field id="voucher_id" label="Voucher No" type="string" control="TextBox" size="s" maxLength="50" isOptional="true" readOnly="true" forStatus="true"/>
                <dummy size="4"/>
                <field id="doc_date" label="Date" type="date" control="Date" size="ms" range="finYear"/>
                <nextRow/>     
                <field id="rcpt_type" label="Settlement type" type="int" control="SimpleCombo" size="ms">
                    <options>
                        <option value="0">Cash Bank</option>
                        <option value="1">Journal</option>
                    </options>
                </field>
                <dummy size="5"/>
                <!--<field id="fc_type_id" label="Txn Ccy" type="int" control="FC" mdata-event="subscribe:mcr.fc_changed" readOnly="true" />
                <field id="exch_rate" label="Amount" type="Hidden" control="Hidden" scale="fc" readOnly="true" isOptional="true"/>-->
                <field id="is_inter_branch" label="" type="bool" control="Toggle" toggleOn="Inter Branch" toggleOff="Normal" size="C90"/>
                <nextRow/>
                <field id="account_id" label="Settlement Account" type="int" control="SmartCombo" size="4" >
                    <lookup>
                        <valueMember>account_id</valueMember>
                        <displayMember>account_head</displayMember>
                        <namedLookup>../core/ac/lookups/AccountWithDebtorsCreditors.xml</namedLookup>
                        <filterEvent>core_ar.rcpt_account_combo_filter</filterEvent>
                    </lookup>   
                </field>
                <cButton id="seleInv" onClick="mcr.SelectInvoice" label="Select Invoices" icon="glyphicon glyphicon-plus"/>
                <dummy size="1"/>
                <field id="net_settled" label="Amount Received" type="decimal" control="TextBox" size="ms"   isOptional="true"
                       mdata-event="subscribe:mcr.net_settled_changed"/>
                <field id="net_settled_fc" label="Amount Received FC" type="decimal" control="TextBox" size="ms"  isOptional="true"
                       data-fc-dependent="net_settled" mdata-event="subscribe:mcr.net_settled_changed"/> 
                <nextRow/> 
                <tranSection label="Receivable Allocations" editMode="Add|Edit|Delete"  fixedWidth="1200" fixedHeight="150"
                             afterDeleteMethod="mcr.rl_tran_delete">
                    <dataBinding dataProperty="receivable_ledger_alloc_tran">
                        <field id="account_id" label="Customer" type="int" control="SmartCombo" size="5" readOnly="true">
                            <lookup>
                                <valueMember>customer_id</valueMember>
                                <displayMember>customer</displayMember>
                                <namedLookup>../core/ar/lookups/Customer.xml</namedLookup>
                            </lookup>   
                        </field>
                        <field id="invoice_id" label="Voucher No" type="string" control="TextBox" size="3" maxLength="50" readOnly="true"/>                        
                        <field id="invoice_date" label="Date" type="date" control="Date" size="2" readOnly="true"/>
                        <field id="balance" label="Balance" type="decimal" control="TextBox" size="2"  readOnly="true"  format="Amount" 
                                cdata-visible-on="mcr.visible_balance"/>
                        <field id="balance_fc" label="Balance FC" type="decimal" control="TextBox" size="1"  readOnly="true"  
                               cdata-visible-on="mcr.visible_balance_fc"/>
                        
                        <field id="credit_amt" label="Net Received Amount" type="decimal" control="TextBox" size="3"  isOptional="true"   
                               mdata-event="subscribe:mcr.amount_changed"/>
                        <field id="credit_amt_fc" label="Net Received Amount FC" type="decimal" control="TextBox" size="1"   isOptional="true" 
                               data-fc-dependent="credit_amt"  mdata-event="subscribe:mcr.amount_changed"/>
                        
                        <field id="write_off_amt" label="Dis." type="decimal" control="TextBox" size="2"  isOptional="true" 
                               mdata-event="subscribe:mcr.disc_changed"/>
                        <field id="write_off_amt_fc" label="Dis. FC" type="decimal" control="TextBox" size="1"   isOptional="true" 
                               data-fc-dependent="write_off_amt" mdata-event="subscribe:mcr.disc_changed"/>
                        
                        <field id="tds_amt" label="Tax Ded./With." type="decimal" control="TextBox" size="2"   isOptional="true" 
                               mdata-event="subscribe:mcr.disc_changed"/>
                        <field id="tds_amt_fc" label="Tax Ded./With. FC" type="decimal" control="TextBox" size="1" isOptional="true"   
                               data-fc-dependent="tds_amt" mdata-event="subscribe:mcr.disc_changed"/>
                        
                        <field id="gst_tds_amt" label="GST Tax Ded./With." type="decimal" control="TextBox" size="2"   isOptional="true" 
                               mdata-event="subscribe:mcr.disc_changed"  cdata-enable-on="mcr.enable_gst_tds"/>
                        <field id="gst_tds_amt_fc" label="GST Tax Ded./With. FC" type="decimal" control="TextBox" size="1" isOptional="true"   
                               data-fc-dependent="gst_tds_amt" mdata-event="subscribe:mcr.disc_changed"/>
                        
                        <field id="other_exp" label="Other Exp." type="decimal" control="TextBox" size="2"    isOptional="true"
                               mdata-event="subscribe:mcr.disc_changed"/>
                        <field id="other_exp_fc" label="Other Exp. FC" type="decimal" control="TextBox" size="1"   isOptional="true" 
                               data-fc-dependent="other_exp" mdata-event="subscribe:mcr.disc_changed"/>
                        
                        <field id="credit_exch_diff" label="Exch. Diff" type="decimal" control="TextBox" size="1"   isOptional="true" 
                               readOnly="true" cdata-visible-on="core_ar.ar_enable_visible_fc"/>
                        
                        <field id="net_credit_amt" label="Gross Amount" type="decimal" control="TextBox" size="3" isOptional="true" readOnly="true" />
                        <field id="net_credit_amt_fc" label="Gross Amount FC" type="decimal" control="TextBox" size="1"  isOptional="true"
                               readOnly="true" cdata-visible-on="core_ar.ar_enable_visible_fc"/>
                        <field id="rl_pl_id" label="rl_pl_id" type="Hidden" control="Hidden" size="xs"/>
                        <field id="branch_id" label="branch_id" type="Hidden" control="Hidden" size="xs"/>
                        
                    </dataBinding>
                </tranSection>
                <nextRow/> 
                <xdiv id="narration_div" size="6"/> 
                    <xtab id="rcpt_tab" size="12" />   
                        <xtabPage id="adv_tab_page" label="Advances" tabid="rcpt_tab" size="12"/>
                            <tranSection label="" editMode="Add|Edit|Delete" afterDeleteMethod="mcr.rl_tran_delete">
                                <dataBinding dataProperty="rcpt_adv_tran">
                                    <field id="account_id" label="Customer" type="int" control="SmartCombo" size="4"  
                                            mdata-event="subscribe: mcr.fetch_cust_info">
                                        <lookup>
                                            <valueMember>customer_id</valueMember>
                                            <displayMember>customer</displayMember>
                                            <namedLookup>../core/ar/lookups/Customer.xml</namedLookup>
                                        </lookup>   
                                    </field>
                                    <field id="branch_id" label="Target Branch" type="int" control="SmartCombo" size="4" cdata-enable-on="mcr.target_branch_enable">
                                        <lookup>
                                            <valueMember>branch_id</valueMember>
                                            <displayMember>branch_name</displayMember>
                                            <namedLookup>../cwf/sys/lookups/Branch.xml</namedLookup>
                                        </lookup>   
                                    </field>
                                    <field id="adv_amt" label="Advance Amount" type="decimal" control="TextBox" size="2"  isOptional="true"   
                                               mdata-event="subscribe:mcr.adv_item_calc"/>
