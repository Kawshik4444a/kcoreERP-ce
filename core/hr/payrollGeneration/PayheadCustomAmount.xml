<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'>
    <allocView id="PayheadCustomAmount" type="alloc" width="1000px">
        <header>Custom Amount</header> 
        <controlSection editMode="Edit">
            <dataBinding>        
                <tranSection label="" editMode="Edit">
                    <dataBinding dataProperty="payroll_custom_tran_temp">
                        <field id="employee_fullname" label="Employee" type="string" control="TextBox" size="s" readOnly="true"/>
                        <field id="payhead" label="Payhead" type="string" control="TextBox" size="s" readOnly="true"/>
                        <field id="payhead_type" label="Payhead Type" type="string" control="TextBox" size="s" readOnly="true"/>
                        <field id="amt" label="Amount" type="decimal" control="TextBox" size="s" scale="amt" isOptional="true"/>
                    </dataBinding>
                </tranSection> 
            </dataBinding>
        </controlSection>
    </allocView>
</cwFramework>