<wizardView>
    <header>Select Employee</header>
    <sections>
        <formSection id="SelectEmployee">
            <displayFields>
                <displayField id="employee_id" label="Employee" type="int" control="SmartCombo" size="m" editMode="edit" defaultValue="-1">
                    <lookup>
                        <valueMember>employee_id</valueMember>
                        <displayMember>full_employee_name</displayMember>
                        <namedLookup>../core/hr/lookups/Employee.xml</namedLookup>
                     </lookup>  
                </displayField>                 
                <displayField id="schedule_type" label="Schedule Type" control="SimpleCombo" type="int" size="ms" editMode="edit" >
                    <options>
                        <option value="0">Pay Schedule</option>
                        <option value="1">Custom Schedule</option>
                    </options>
                </displayField>   
            </displayFields>
        </formSection>
    </sections>
</wizardView>