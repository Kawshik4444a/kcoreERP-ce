<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'>
    
    <businessObject id="RemoteServer" type="Master">
        <connectionType>
            <mainDB/>
        </connectionType>
        <controlTable>
            <tableName>sys.remote_server</tableName>
            <primaryKey>remote_server_id</primaryKey>   
            <fetchOrCreate>
                <useEntity/>
            </fetchOrCreate>
            <save>
                <useOnSave/>
            </save> 
            <delete>
                <useOnDelete/>
            </delete>            
        </controlTable> 
        <codeBehind>
            <className>\app\cwf\sys\remoteServer\RemoteServerEventHandler</className>
        </codeBehind>
    </businessObject>
</cwFramework>